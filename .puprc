{
    "build": [
        "@composer install --no-dev --optimize-autoloader",
        "npm install",
        "npm run build"
    ],
    "build_dev": [
        "@composer install",
        "npm install",
        "npm run build"
    ],
    "checks": {
        "version-conflict": {
            "fail_method": "error",
            "fail_method_dev": "warn"
        }
    },
    "paths": {
        "build_dir": ".pup-build",
        "changelog": "readme.txt",
        "versions": [
            {
                "file": "known-issues.php",
                "regex": "(Version: +)(.+)"
            },
            {
                "file": "readme.txt",
                "regex": "(Stable tag: +)(.+)"
            },
            {
                "file": "package.json",
                "regex": "(\"version\": \")([^\"]+)"
            }
        ],
        "zip_dir": ".pup-zip"
    },
    "repo": "bordoni/known-issues",
    "zip_use_default_ignore": true,
    "zip_name": "known-issues"
}
