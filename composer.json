{
    "name": "bordoni/known-issues",
    "description": "WordPress plugin to track and manage known issues synced from Jira with HelpScout integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Gustavo Bordoni",
            "email": "gustavo@bordoni.me"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5 || ^9.6",
        "wp-phpunit/wp-phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.9",
        "wp-coding-standards/wpcs": "^3.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "KnownIssues\\": "includes/"
        },
        "files": [
            "includes/functions-helpers.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
